@page
@model ShiftManager.Pages.Requests.TimeOff.CreateModel
@{
    Layout = "_Layout";
}
<h2>Request Time-off</h2>
<div class="card" style="max-width:560px">
    <form method="post">
        <div style="display:grid; gap:.75rem">
            <label>Start date<br /><input class="input" asp-for="StartDate" type="date" /></label>
            <label>End date<br /><input class="input" asp-for="EndDate" type="date" /></label>
            <label>Reason (optional)<br /><input class="input" asp-for="Reason" /></label>
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>

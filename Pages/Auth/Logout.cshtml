@page
@model ShiftManager.Pages.Auth.LogoutModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Logged Out - Shift Manager</title>
    <link rel="stylesheet" href="~/css/site.css" />
    @if (Model.LoggedOut)
    {
        <meta http-equiv="refresh" content="3;url=/Auth/Login">
    }
</head>
<body>
    <div style="display: flex; align-items: center; justify-content: center; min-height: 100vh; background: var(--bg);">
        <div style="text-align: center; padding: 3rem; background: var(--surface); border-radius: 1rem; border: 1px solid var(--border); box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1); max-width: 400px;">
            @if (Model.LoggedOut)
            {
                <div style="color: var(--success); font-size: 3rem; margin-bottom: 1rem;">âœ“</div>
                <h2 style="color: var(--text); margin-bottom: 1rem;">Successfully Logged Out</h2>
                <p style="color: var(--muted); margin-bottom: 2rem;">You have been securely logged out of the Shift Manager.</p>
                <p style="color: var(--muted); font-size: 0.9rem;">Redirecting to login page in 3 seconds...</p>
                <a href="/Auth/Login" style="display: inline-block; margin-top: 1rem; padding: 0.75rem 1.5rem; background: var(--primary); color: white; text-decoration: none; border-radius: 0.5rem; font-weight: 500;">Go to Login Now</a>
            }
            else
            {
                <h2 style="color: var(--text);">Logging out...</h2>
                <p style="color: var(--muted);">Please wait while we log you out securely.</p>
            }
        </div>
    </div>
</body>
</html>